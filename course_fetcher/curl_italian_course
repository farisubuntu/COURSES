#!/usr/bin/bash

# make dir for data and go into it
mkdir -p "data";
cd "$(pwd)/data";


# curl payload contain's target_lang=it for turky, change it to any language code 

# temp
n=$1 # parameter presents category
const_url="https://api.mondly.com/v2/categories/$n/lessons/";

function req_category () {
cat_url="https://api.mondly.com/v1/categories/${n}"

result="$(curl ${cat_url} \
  -H 'authority: api.mondly.com' \
  -H 'accept: application/json, text/javascript, */*; q=0.01' \
  -H 'accept-language: en-US,en;q=0.9,ar;q=0.8,ur;q=0.7' \
  -H 'cookie: _gcl_au=1.1.1289737145.1708426026; _ga=GA1.1.1638187391.1708426026; _fbp=fb.1.1708426026468.394005161; mother_lang=ar; pcid=80727397%24cwaWEv0FXm-zvNkTPVHNHhEO5N6MSJpL; muid=80727397%24xCpXN7kroe; mab=1; auth_key=74615b12930ea25e7db89c94b3b9a89959c9d4a5cf86f340ee956f5b37316935a%3A2%3A%7Bi%3A0%3Bs%3A8%3A%22auth_key%22%3Bi%3A1%3Bs%3A54%3A%22%5B80727397%2C%22hsE06w5N7q4eBiFGWRhcQaMEOEsRS1AQ%22%2C31536000%5D%22%3B%7D; target_lang=it; ab.storage.deviceId.c1c30b59-f83e-4c27-8252-7d0280a631e0=%7B%22g%22%3A%2229984b1b-3e9f-6e75-6fe9-6cf11235f886%22%2C%22c%22%3A1708426026054%2C%22l%22%3A1708439154787%7D; ab.storage.userId.c1c30b59-f83e-4c27-8252-7d0280a631e0=%7B%22g%22%3A%2280727397%24xCpXN7kroe%22%2C%22c%22%3A1708436266667%2C%22l%22%3A1708439154787%7D; ab.storage.sessionId.c1c30b59-f83e-4c27-8252-7d0280a631e0=%7B%22g%22%3A%22ac24e14d-9789-7537-9bd4-a540b4303f70%22%2C%22e%22%3A1708440954905%2C%22c%22%3A1708439154787%2C%22l%22%3A1708439154905%7D; _ga_JDEGTVP3K1=GS1.1.1708439154.3.1.1708439168.46.0.0')";

echo "$result" > "$n.json"


}
