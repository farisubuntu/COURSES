}




function req_all () {
 
 mkdir "${n}"
 cd "$(pwd)/${n}"
 
 # get category '3' and vocabulary 
 req_category;
req_vocabulary;
   
 #get topics
 
 for i in 1 2 3 4 5 6; do
  url="${const_url}${n}0${i}"
  echo "${url}"
  echo "################################ Lesson: ${i} ########################################"
  req_topic "${url}" "${i}"
 done;
 

echo "Finised..."
$(cd ..);
 
 
}




req_all;


