function req_topic () {
filename="${n}0${2}.json"

#TODO: check if file present
touch "${filename}"

result="$(curl ${1} \
-H 'authority: api.mondly.com' \
-H 'accept: application/json, text/javascript, */*; q=0.01' \
-H 'accept-language: en-US,en;q=0.9' \
-H 'cookie: _vwo_uuid_v2=DF54583EFC33101F17539A58165D5D643|25ca9c972af6dc7b640cd20aaa923e51; _gcl_au=1.1.303590113.1707977255; _ga=GA1.1.628041428.1707977255; _uetsid=83760940cbc811ee95633795144d408f; _uetvid=837631a0cbc811ee915f9d2163f7ab30; _tt_enable_cookie=1; _ttp=5Zl8MyZPhYhyqowfVQ3wDbnZJHC; _clck=1ybb20v%7C2%7Cfja%7C0%7C1506; _pin_unauth=dWlkPU1UQmxOekJsTWpRdFl6SmpOUzAwTUdKakxXRTJZVEF0WkRjNU5XRmpZMkUwTXprMA; _clsk=1teo05x%7C1707977256371%7C1%7C1%7Ct.clarity.ms%2Fcollect; _fbp=fb.1.1707977258228.1378532803; OptanonConsent=isGpcEnabled=0&datestamp=Thu+Feb+15+2024+09%3A07%3A43+GMT%2B0300+(Arabian+Standard+Time)&version=202301.2.0&isIABGlobal=false&consentId=5122fa6b-ea5d-477f-994e-3cb47cb9e955&interactionCount=1&landingPath=https%3A%2F%2Fwww.mondly.com%2F&groups=C0001%3A1%2CC0002%3A1%2CC0004%3A1%2CC0005%3A1&hosts=H32%3A1%2CH39%3A1%2CH42%3A1%2CH23%3A1%2CH34%3A1%2CH56%3A1%2CH57%3A1%2CH19%3A1%2CH48%3A1%2CH29%3A1%2CH55%3A1%2CH1%3A1%2CH30%3A1%2CH6%3A1%2CH27%3A1%2CH9%3A1%2CH10%3A1%2CH14%3A1%2CH44%3A1%2CH52%3A1%2CH8%3A1&genVendors=; _ga_X6TGX41EDR=GS1.1.1707977255.1.0.1707977263.52.0.0; mother_lang=ar;target_lang=it; pcid=80727397%24cwaWEv0FXm-zvNkTPVHNHhEO5N6MSJpL; muid=80727397%24xCpXN7kroe; mab=1; auth_key=74615b12930ea25e7db89c94b3b9a89959c9d4a5cf86f340ee956f5b37316935a%3A2%3A%7Bi%3A0%3Bs%3A8%3A%22auth_key%22%3Bi%3A1%3Bs%3A54%3A%22%5B80727397%2C%22hsE06w5N7q4eBiFGWRhcQaMEOEsRS1AQ%22%2C31536000%5D%22%3B%7D; ab.storage.deviceId.c1c30b59-f83e-4c27-8252-7d0280a631e0=%7B%22g%22%3A%2253353a2e-ca7d-4543-cfc4-52ad301c1a6b%22%2C%22c%22%3A1707977264747%2C%22l%22%3A1707977268664%7D; ab.storage.userId.c1c30b59-f83e-4c27-8252-7d0280a631e0=%7B%22g%22%3A%2280727397%24xCpXN7kroe%22%2C%22c%22%3A1707977268662%2C%22l%22%3A1707977268664%7D; ab.storage.sessionId.c1c30b59-f83e-4c27-8252-7d0280a631e0=%7B%22g%22%3A%227b7d0cdc-8872-bbf8-c101-5e644e70f00e%22%2C%22e%22%3A1707979069062%2C%22c%22%3A1707977268663%2C%22l%22%3A1707977269062%7D; _ga_JDEGTVP3K1=GS1.1.1707992004.2.1.1707992009.55.0.0